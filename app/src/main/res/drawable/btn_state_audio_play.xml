<?xml version="1.0" encoding="utf-8"?>
<!--
View state changes are supported in API 21+. As cool as these are, it's not worth supporting
them yet. So for now we'll just have a weird fade.
https://developer.android.com/training/material/animations.html#ViewState
-->

<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_shortAnimTime"
    android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item android:drawable="@drawable/audio_btn_play_pressed"
          android:state_pressed="true"/>

    <item android:drawable="@drawable/ic_audio_btn_play_normal" />

</selector>
