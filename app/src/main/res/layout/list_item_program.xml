<?xml version="1.0" encoding="utf-8"?>
<!-- We're not using paddingStart or paddingEnd because we need to support API 16 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:minHeight="65dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/program_avatar_wrapper"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/program_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/program_letter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/program_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="1"
        style="@style/text_list_item" />

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical|end"
        android:gravity="start" >

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/ic_chevron_right" />

        <ImageView
            android:id="@+id/audio_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/seek_thumb"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
