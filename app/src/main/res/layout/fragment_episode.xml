<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.kpcc.android.EpisodeFragment"
    android:orientation="vertical">

    <include layout="@layout/program_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/program_title"
        android:id="@+id/program_title"/>

    <TextView
        android:id="@+id/episode_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/episode" />

    <TextView
        android:id="@+id/air_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/audio_current_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/audio_current_time" />

        <TextView
            android:id="@+id/time_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_separator"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:id="@+id/audio_total_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/audio_total_time" />
    </LinearLayout>

    <TextView
        android:id="@+id/audio_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/audio" />

    <include layout="@layout/audio_button" />

</RelativeLayout>
