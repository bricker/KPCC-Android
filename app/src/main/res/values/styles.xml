<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Requires API 21+ :( -->
        <!-- <item name="android:progressTint">@color/kpcc_orange</item> -->
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="android:textColorPrimaryDisableOnly">@color/light_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:editTextStyle">@style/AppTheme.Widget.EditText</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <!--<item name="android:windowNoTitle">true</item>-->
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">@color/kpcc_orange</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="fontPath">fonts/FreigSanProMed.otf</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Widget.EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="AppTheme.ProgressBarHorizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
    </style>

    <style name="static_content_wrapper">
        <item name="android:layout_marginTop">@dimen/page_padding_vertical</item>
        <item name="android:layout_marginRight">@dimen/page_padding_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/page_padding_vertical</item>
        <item name="android:layout_marginLeft">@dimen/page_padding_horizontal</item>
    </style>
    <!--
        For list views, we don't want top padding on the page, so the list scrolls right into
        the activity bar
    -->
    <style name="list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">@dimen/page_padding_horizontal</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/page_padding_horizontal</item>
        <item name="android:divider">@color/horizontal_rule</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/transparent_black</item>
    </style>

    <style name="text_list_item">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="tab">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text_date">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_header_small">
        <item name="android:textColor">@color/kpcc_orange</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/FreigSanProMed.otf</item>
    </style>

    <style name="kpcc_font_family">
        <item name="fontPath">fonts/FreigSanProMed.otf</item>
    </style>

    <style name="text_header_large">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="background_image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="generic_background_image" parent="background_image">
        <item name="android:src">@drawable/tile_generic</item>
    </style>

    <style name="check_radio_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="active_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/transparent_dark_gray</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="live_seek_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
